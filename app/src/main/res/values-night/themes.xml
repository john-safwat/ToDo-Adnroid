<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary"> @color/white</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="backgroundColor">@color/dark_blue</item>
        <item name="logoImage">@drawable/app_logo</item>
        <item name="creditsImage">@drawable/credits</item>
        <item name="appBarColor">@color/blue</item>
        <item name="appBarTextColor">@color/white</item>
        <item name="cardBackgroundColor">@color/light_black</item>
        <item name="onCardColor">@color/blue</item>
        <item name="onDoneColor">@color/green</item>
        <item name="bottomNavigationBarSelectedItemColor">@color/blue</item>
        <item name="bottomNavigationBarUnSelectedItemColor">@color/white</item>
        <item name="bottomNavigationBarBackgroundColor">@color/light_black</item>
    </style>


    <style name="appbarTextStyle" parent="Theme.ToDoAndroid">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <style name="itemCardTextStyle" parent="Theme.ToDoAndroid">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>