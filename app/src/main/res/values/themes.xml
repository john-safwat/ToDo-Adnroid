<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/blue</item>
        <item name="backgroundColor">@color/cyan</item>
        <item name="logoImage">@drawable/app_logo</item>
        <item name="creditsImage">@drawable/credits</item>
        <item name="appBarColor">@color/blue</item>
        <item name="appBarTextColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="onCardColor">@color/blue</item>
        <item name="onDoneColor">@color/green</item>
        <item name="bottomNavigationBarSelectedItemColor">@color/blue</item>
        <item name="bottomNavigationBarUnSelectedItemColor">@color/gray</item>
        <item name="bottomNavigationBarBackgroundColor">@color/white</item>
    </style>

    <style name="headTextStyle" parent="Theme.ToDoAndroid">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>